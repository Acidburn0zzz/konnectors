/*
    CONTAINER
*/
.container
    margin-left     14em
    padding         2em 4em

    .default
        max-width 50em
        font-size 1.1em

        // circle on top of the box
        $header-size = 306px
        header
            height              $header-size
            width               $header-size
            margin              1em auto
            background-image    url('../images/illustrations/illustrations-konnectors.svg')
            background-position center center
            background-repeat   no-repeat

    .konnector
        margin-bottom 30px
        padding-bottom 10px

        h2
            margin 0

        h2.name
            margin-bottom 2em        

        div.description
            margin    1em 0
            max-width 50em
            font-size 1.2em

        .field
            margin 15px 0

        .autoimport
            min-width 200px
            max-width 500px

        .error
            color red
            font-weight bold

        .buttons
            margin 4em 0 10px 0
            button
                outline none
                &[aria-disabled=true]
                    background #666
                    color #bbb
                &[aria-busy=true]
                    cursor wait

        .infos div
            margin 5px 0

        .folder-link
            margin-top 5px
            font-size 12px
            color blue

            &:hover
                color blue - 10%

        // Generated inputs styles
        input
        textarea
            border 2px solid transparent
            border-radius 2px
            background #EAEEF2
            width 500px
            padding 10px
            font-size 15px
            outline none
            transition all 0.3s ease


        select
            border-color blue
            outline none

        input:hover
        textarea:hover
        select:hover
            border-color #ACB8C5

        input:focus
        textarea:focus
        select:focus
            border-color blue
            background white

        .small
            padding 0.5em
            font-size 0.6em

    .danger-zone
        h3
            margin-top 30px
            font-size 20px

        button
            background transparent
            color blue
            text-transform lowercase
            padding 0

            &:hover
                text-decoration underline

            &:active
            &:focus
               box-shadow none

