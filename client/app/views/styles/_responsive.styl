// Landscape phone to portrait tablet
@media (max-width: 767px)

    body
        text-rendering optimizeSpeed
        overflow none

    #menu-toggler
        display inline-block

    #menu
    .container
        transition left .25s ease-in-out
        position absolute
        top 0

    #menu
        left -100%
        width 80%

        &.active
            left 0

    #menu.active ~ .container
        left 80%

    .container
        position absolute
        width 100%
        left 0
        margin-left 0
        padding 0

        h2 span
                font-size 20px

        .description
            font-size 13px

        #default
        .konnector
            padding 0 25px


